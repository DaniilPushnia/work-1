#include <stdio.h>
#include <stdlib.h>

int min_steps(int x, int y) {
    if (x == y) {
        return 0;
    } else if (abs(y - x) == 1) {
        return 1;
    } else if (abs(y - x) == 2) {
        return 2;
    } else {
        int steps = 0;
        int current_pos = x;
        int step_length = 1;
        while (current_pos != y) {
            steps++;
            if (abs(y - current_pos) < step_length) {
                step_length--;
            } else if (abs(y - current_pos) == step_length) {
                // do nothing
            } else {
                step_length++;
            }
            if (current_pos < y) {
                current_pos += step_length;
            } else {
                current_pos -= step_length;
            }
        }
        return steps;
    }
}

int main() {
    int x, y;
    
    printf("Введіть значення x: ");
    scanf("%d", &x);
    printf("Введіть значення y: ");
    scanf("%d", &y);
    
    int result = min_steps(x, y);
    printf("Мінімальна кількість кроків від %d до %d: %d\n", x, y, result);

    return 0;
}
